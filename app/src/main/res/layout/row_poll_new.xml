<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/main_content"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:id="@+id/cardView"
        android:layout_margin="@dimen/margin_two_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="@dimen/margin_two_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <quyennv.becamex.voteeoffice.ui.CircularImageView
                    android:src="@mipmap/ic_launcher"
                    android:layout_alignParentStart="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/avatar">
                </quyennv.becamex.voteeoffice.ui.CircularImageView>
                <TextView
                    android:textColor="#000000"
                    android:layout_toEndOf="@+id/avatar"
                    android:layout_toStartOf="@+id/poll_created"
                    android:text="How to add a TextView to a LinearLayout dynamically in Android?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/title">
                </TextView>
                <TextView
                    android:id="@+id/poll_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="20/11/2020 11:30"
                    android:layout_alignParentEnd="true"
                    />

                <RelativeLayout
                    android:layout_margin="@dimen/margin_two_view"
                    android:id="@+id/layout_action"
                    android:layout_below="@+id/poll_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginEnd="@dimen/margin_two_view"
                        android:layout_marginStart="@dimen/margin_two_view"
                        android:layout_toStartOf="@id/img_poll_delete"
                        android:src="@mipmap/ic_edit"
                        android:id="@+id/img_edit"
                        android:layout_width="24dp"
                        android:layout_height="24dp">

                    </ImageView>
                    <ImageView

                        android:layout_marginStart="@dimen/margin_two_view"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/ic_bin1"
                        android:id="@+id/img_poll_delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp">

                    </ImageView>

            </RelativeLayout>

        </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/margin_two_view"
                android:layout_marginBottom="@dimen/margin_two_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#1e88e5"
                    android:text="3 người bình chọn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:id="@+id/numberPoll">
                </TextView>
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_alignParentEnd="true"
                    android:text="Nguyễn Văn Quyền"
                    android:id="@+id/user_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/list_plan_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:background="@drawable/poll_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww"
                        android:layout_toStartOf="@+id/countPoll"
                        />

                    <TextView
                        android:id="@+id/countPoll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="3"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/poll_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phương án 1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="3"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/poll_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phương án 1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="3"
                        />
                </RelativeLayout>


            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1e88e5"
                    android:textAllCaps="true"
                    android:text="Xem bình chọn"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>