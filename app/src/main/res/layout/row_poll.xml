<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/main_content"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_margin="@dimen/margin_two_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="@dimen/margin_two_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:visibility="visible"
                android:src="@mipmap/ic_poll"
                android:layout_alignParentStart="true"
                android:id="@+id/imgAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp">

            </ImageView>
            <RelativeLayout
                android:paddingStart="@dimen/margin_two_view"
                android:id="@+id/layout_content"
                android:layout_toEndOf="@id/imgAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layout_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/poll_created"
                        android:text="Bình chọn 1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textFontWeight="700"
                        android:id="@+id/title">

                    </TextView>
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:layout_below="@id/title"
                        android:text="Nguyễn Văn Quyền"
                        android:id="@+id/user_created"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:text="11/07/2020000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/poll_created">

                    </TextView>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_margin="@dimen/margin_two_view"
                    android:layout_below="@id/layout_author"
                    android:id="@+id/layout_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginEnd="@dimen/margin_two_view"
                        android:layout_marginStart="@dimen/margin_two_view"
                        android:layout_toStartOf="@id/img_poll_delete"
                        android:src="@mipmap/ic_edit"
                        android:id="@+id/img_edit"
                        android:layout_width="24dp"
                        android:layout_height="24dp">

                    </ImageView>
                    <ImageView

                        android:layout_marginStart="@dimen/margin_two_view"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/ic_bin1"
                        android:id="@+id/img_poll_delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp">

                    </ImageView>

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <!--
        </androidx.cardview.widget.CardView>
    -->
</LinearLayout>